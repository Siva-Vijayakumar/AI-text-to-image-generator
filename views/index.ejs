<!doctype html>
<html lang="en">
<head>
    <title>Limewire Image Generation</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
    <style>
        body {
            background-color: #000000;
            background-image: url("https://www.transparenttextures.com/patterns/brushed-alum-dark.png");
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            align-items: center;
            color: white;
            min-height: 100vh;
            margin: 0;
        }
        header, footer {
            width: 100%;
            background-color: #333;
            padding: 10px 0;
            text-align: center;
            color: white;
        }
        header h1, footer p {
            margin: 0;
        }
        .container {
            max-width: 600px;
            margin-top: 20px;
            padding: 20px;
            background-color: #000000;
            background-image: url("https://www.transparenttextures.com/patterns/brushed-alum.png");
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
        }
        .image-container {
            margin-top: 20px;
        }
        h2 {
            font-size: 1.8rem;
            margin-bottom: 20px;
        }
        .form-control {
            height: calc(2.5rem + 2px); /* Ensure input height matches button height */
            padding: .5rem 1rem; /* Match button padding */
            font-size: 1rem; /* Match button font size */
            border-radius: .3rem; /* Match button border radius */
        }
        .btn-primary {
            height: calc(2.5rem + 2px); /* Ensure button height matches input height */
            font-size: 1rem; /* Match input font size */
            border-radius: .3rem; /* Match input border radius */
        }
        .profile-img {
            display: block;
            margin: 0 auto 20px;
            border-radius: 50%;
        }
    </style>
</head>
<body>
    <header>
        <h1>Limewire Image Generation</h1>
    </header>
    <div class="container">
        <img src="SILO.jpg" height="100px" width="100px" class="profile-img" alt="Profile Image">
        <form action="/search" method="post">
            <h2>Generate an Image</h2>
            <div class="row justify-content-center">
                <div class="col-8">
                    <input type="text" name="word" id="word" placeholder="Enter a prompt" class="form-control" required>
                </div>
                <div class="col-4">
                    <button type="submit" class="btn btn-primary btn-block">Search</button>
                </div>
            </div>
        </form>
    </div>
    <% if (locals.imageUrl) { %>
    <div class="container image-container">
        <h2>Generated Image:</h2>
        <img src="<%= imageUrl %>" alt="Generated Image" class="img-fluid rounded">
    </div>
    <% } %>
    <footer>
        <p>Designed by Silo Brothers</p>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
</body>
</html>
